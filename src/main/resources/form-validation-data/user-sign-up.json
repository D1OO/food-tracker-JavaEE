{
    "username": {
      "regex": "^[a-z0-9_\\.-]{1,30}@[\\da-z\\.-]{1,15}\\.[a-z\\.]{2,8}$",
      "errorMessage": "Incorrect email"
    },
    "password": {
      "regex": "^[0-9a-zA-Z]{8,15}$",
      "errorMessage": "Only latin letters and digits are allowed"
    },
    "firstNameEN": {
      "regex": "^[A-Z]((?![ .,'-]$)[a-z .,'-]){2,24}$",
      "errorMessage": "Incorrect value"
    },
    "firstNameRU": {
      "regex": "^[А-Я]((?![ .,'-]$)[а-я .,'-]){2,24}$|^$",
      "errorMessage": "Incorrect value"
    },
    "lastName": {
      "regex": "^[A-Z]((?![ .,'-]$)[a-z .,'-]){2,24}$",
      "errorMessage": "Incorrect value"
    }
}
