{
  "firstName": {
    "regex": "^[A-Z]((?![ .,'-]$)[a-z .,'-]){2,24}$|^[А-Я]((?![ .,'-]$)[а-я .,'-]){2,24}$|^$",
    "errorMessage": "Incorrect value"
  },
  "lastName": {
    "regex": "^[A-Z]((?![ .,'-]$)[a-z .,'-]){2,24}$",
    "errorMessage": "Incorrect value"
  },
  "age": {
    "regex": "^[0-9]{1,3}$",
    "min": "1",
    "max": "120",
    "errorMessage": "Incorrect value, must be between 1 and 120"
  },
  "weight": {
    "regex": "^[0-9]{1,3}$",
    "min": "1",
    "max": "250",
    "errorMessage": "Incorrect value, must be between 1 and 250"
  },
  "height": {
    "regex": "^[0-9]{1,3}$",
    "min": "10",
    "max": "255",
    "errorMessage": "Incorrect value, must be between 10 and 255"
  }
}
